@using PagedList;
@using PagedList.Mvc;
@model IPagedList<RealState.Models.SignUpModel>
@{
    ViewBag.Title = "Home Page";
}
@*<link rel="stylesheet" href="~/css/userAco/profile.css">*@
<link rel="stylesheet" href="~/css/states.css">

<script>
    function goToController(userid) {
        window.location.href = '@Url.Action("profileWithUserId", "UserAccount")?userId=' + userid;
    }
</script>
<style>
    .testimonial {
        height: auto
    }

    .main-profile {
        margin: 50px auto;
    }

    .states .card img {
        width: 150px;
        height: 150px;
    }

    .profile-image {
        /*        width: 150px;
        height: 150px;*/
        background: url(/images/building2.jpg) center;
        background-size: cover;
        border-radius: 50%;
        border: 10px solid var(--primary-bg);
    }
    .send {
        color: #fff;
        font-size: 18px;
        outline: none;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        background: #32749b;
        cursor: pointer;
        transition: all 0.3s ease;
    }
</style>
<!--start carsouel-->
<div id="carouselExampleIndicators" class="carousel slide start" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slider1.jfif" class="d-block w-100" alt="...">

            <div class="carousel-caption">
                <h2 class="h1">You will get your Purpose</h2>
            </div>

        </div>
        <div class="carousel-item">
            <img src="~/images/slider2jfif.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption hidden-xs hidden-xs">
                <h2 class="h1">Offers!</h2>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/slider3.jfif" class="d-block w-100" alt="...">
            <div class="carousel-caption hidden-xs hidden-xs">
                <h2 class="h1">Best Seller!</h2>
            </div>
        </div>

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!--end carsouel-->
<!--start bestSeller-->


<div class="states">
    <div class="container">
        <h2 class="text-center mb-5">Best Seller</h2>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card" style="width: 18rem;height:auto" onclick="goToController('@item.SignUp_ID')">
                        <div class="main-profile">
                            <img src="@item.link" class="profile-image">
                        </div>
                        <div class="card-body m-auto">
                            <div class="row">
                            </div>
                            <h4>@item.Name</h4>

                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<!--end bestSeller-->
