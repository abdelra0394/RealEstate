@model RealState.Models.State

@{
    ViewBag.Title = "DeleteConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/details.css">


<div class="content">
    <div class="text-center details">
        <h3 class="pt-5 pb-5">Are you sure you want to delete this?</h3>

        <dl class="dl-horizontal">
            <dd>
                <div class="img mb-3">
                    <img src="@Model.link"
                         class="card-img-top" alt="...">
                </div>
            </dd>

            <div class="row data">
                <div class="col-12 mb-3">
                    @Model.Description
                </div>

                <div class="col-6">City</div>
                <div class="col-6">@Model.City</div>

                <div class="col-6">Price</div>
                <div class="col-6">@Model.Price <b>USD</b></div>

                <div class="col-6">Area</div>
                <div class="col-6">@Model.Area</div>

                <div class="col-6">Offers</div>
                <div class="col-6">@Model.Offers</div>

                <div class="col-6">BuyRent</div>
                <div class="col-6">@Model.BuyRent</div>

                <div class="col-6">Bedrooms</div>
                <div class="col-6">@Model.Bedrooms</div>

                <div class="col-6">Bathrooms</div>
                <div class="col-6">@Model.Bathrooms</div>

                <div class="col-6">Furnished</div>
                <div class="col-6">@Model.Furnished</div>

                <div class="col-6">Security</div>
                <div class="col-6">@Model.Security</div>

                <div class="col-6">Balcony</div>
                <div class="col-6">@Model.Balcony</div>

                <div class="col-6">Private_Garden</div>
                <div class="col-6">@Model.Private_Garden</div>

                <div class="col-6">Pets_Allowed</div>
                <div class="col-6">@Model.Pets_Allowed</div>

                <div class="col-6">Covered_Parking</div>
                <div class="col-6">@Model.Covered_Parking</div>

                <div class="col-6">Maids_Room</div>
                <div class="col-6">@Model.Maids_Room</div>

                <div class="col-6">Electricity_Meter</div>
                <div class="col-6">@Model.Electricity_Meter</div>

                <div class="col-6">Natural_Gas</div>
                <div class="col-6">@Model.Natural_Gas</div>

                <div class="col-6">Landline</div>
                <div class="col-6">@Model.Landline</div>

                <div class="col-6">Pool</div>
                <div class="col-6">@Model.Pool</div>

                <div class="col-6">Central_heating</div>
                <div class="col-6">@Model.Central_heating</div>

                <div class="col-6">Built_in_Kitchen_Appliances</div>
                <div class="col-6">@Model.Built_in_Kitchen_Appliances</div>

                <div class="col-6">Elevator</div>
                <div class="col-6">@Model.Elevator</div>

                <div class="col-6">PaymentOption</div>
                <div class="col-6">@Model.PaymentOption</div>
            </div>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn buy btn-primary" />
                @Html.ActionLink("Back to List", "States", null,new { @class = "btn buy btn-primary" })
            </div>
        }
    </div>
    </div>




